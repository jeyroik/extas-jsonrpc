{
  "name": "extas/jsonrpc",
  "package_classes": [
    {
      "interface": "extas\\interfaces\\jsonrpc\\operations\\IOperationRepository",
      "class": "extas\\components\\jsonrpc\\operations\\OperationRepository"
    },
    {
      "interface": "jsonRpcOperationRepository",
      "class": "extas\\components\\jsonrpc\\operations\\OperationRepository"
    }
  ],
  "plugins": [
    {
      "class": "extas\\components\\plugins\\PluginInstallJsonRpcOperations",
      "stage": "extas.install"
    },
    {
      "class": "extas\\components\\plugins\\installers\\InstallerCommandPlugin",
      "stage": "extas.installer.command"
    }
  ],
  "extensions": [
    {
      "class": "extas\\components\\extensions\\ExtensionRepositoryGet",
      "interface": "extas\\interfaces\\extensions\\IExtensionRepositoryGet",
      "subject": "*",
      "methods": ["jsonRpcOperationRepository"]
    }
  ],
  "jsonrpc_operations": [
    {
      "name": "operation.index",
      "title": "Operation list",
      "description": "Operation list",
      "method": "index",
      "item_name": "test",
      "item_class": "extas\\components\\jsonrpc\\operations\\Operation",
      "item_repo": "extas\\interfaces\\jsonrpc\\operations\\IOperationRepository",
      "class": "extas\\components\\jsonrpc\\operations\\Index",
      "spec": {
        "request": {
          "type": "object",
          "limit": {
            "type": "number"
          }
        },
        "response": {
          "type": "array",
          "properties": {
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "method": {
                  "type": "string"
                },
                "item_name": {
                  "type": "string"
                },
                "item_class": {
                  "type": "string"
                },
                "item_repo": {
                  "type": "string"
                },
                "class": {
                  "type": "string"
                },
                "filter": {
                  "type": "string"
                },
                "spec": {
                  "type": "array"
                }
              }
            },
            "total": {
              "type": "number"
            }
          }
        }
      }
    }
  ]
}
