{
  "name": "extas/jsonrpc",
  "installer_version": 3,
  "package_classes": [
    {
      "interface": "jsonRpcOperationRepository",
      "class": "extas\\components\\jsonrpc\\operations\\OperationRepository"
    },
    {
      "interface": "jsonRpcCrawlerRepository",
      "class": "extas\\components\\jsonrpc\\crawlers\\CrawlerRepository"
    },
    {
      "interface": "jsonRpcGeneratorRepository",
      "class": "extas\\components\\jsonrpc\\generators\\GeneratorRepository"
    }
  ],
  "plugins": [
    {
      "class": "extas\\components\\plugins\\install\\InstallJsonRpcOperations",
      "stage": "extas.install.section.jsonrpc_operations"
    },
    {
      "class": "extas\\components\\plugins\\init\\InitGenerators",
      "stage": "extas.init.section.generators"
    },
    {
      "class": "extas\\components\\plugins\\uninstall\\UninstallJsonRpcOperations",
      "stage": "extas.uninstall.section.jsonrpc_operations"
    },
    {
      "class": "extas\\components\\plugins\\uninstall\\UninstallGenerators",
      "stage": "extas.uninstall.section.generators"
    },
    {
      "class": "extas\\components\\plugins\\installers\\InstallerCommandPlugin",
      "stage": "extas.installer.command"
    },
    {
      "class": "extas\\components\\plugins\\jsonrpc\\PluginDefaultArguments",
      "stage": "extas.jsonrpc.command"
    }
  ],
  "extensions": [
    {
      "class": "extas\\components\\extensions\\ExtensionRepositoryGet",
      "interface": "extas\\interfaces\\extensions\\IExtensionRepositoryGet",
      "subject": "*",
      "methods": [
        "jsonRpcOperationRepository",
        "jsonRpcCrawlerRepository",
        "jsonRpcGeneratorRepository"
      ]
    }
  ],
  "jsonrpc_crawlers": [
    {
      "name": "by.plugin.install.default",
      "title": "PluginInstallDefault",
      "description": "Собирает плагины на основе PluginInstallDefault",
      "class": "extas\\components\\jsonrpc\\crawlers\\ByPluginInstallDefault"
    },
    {
      "name": "by.doc.comment",
      "title": "Doc comment",
      "description": "Собирает классы с тегом @jsonrpc_operation в doc comment",
      "class": "extas\\components\\jsonrpc\\crawlers\\ByDocComment"
    }
  ],
  "generators": [
    {
      "name": "by.plugin.install.default",
      "title": "PluginInstallDefault",
      "description": "Парсит плагины на основе PluginInstallDefault",
      "class": "extas\\components\\jsonrpc\\generators\\ByPluginInstallDefault",
      "tags": ["jsonrpc"]
    },
    {
      "name": "by.doc.comment",
      "title": "By doc comment",
      "description": "Парсит классы с описанием операции в doc-блоке",
      "class": "extas\\components\\jsonrpc\\generators\\ByDocComment",
      "tags": ["jsonrpc"]
    }
  ],
  "jsonrpc_operations": [
    {
      "name": "operation.index",
      "title": "Operation list",
      "description": "Operation list",
      "method": "index",
      "item_name": "operation",
      "item_class": "extas\\components\\jsonrpc\\operations\\Operation",
      "item_repo": "extas\\interfaces\\jsonrpc\\operations\\IOperationRepository",
      "class": "extas\\components\\jsonrpc\\operations\\Index",
      "spec": {
        "request": {
          "type": "object",
          "limit": {
            "type": "number"
          }
        },
        "response": {
          "type": "array",
          "properties": {
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "method": {
                  "type": "string"
                },
                "item_name": {
                  "type": "string"
                },
                "item_class": {
                  "type": "string"
                },
                "item_repo": {
                  "type": "string"
                },
                "class": {
                  "type": "string"
                },
                "filter": {
                  "type": "string"
                },
                "spec": {
                  "type": "array"
                }
              }
            },
            "total": {
              "type": "number"
            }
          }
        }
      }
    }
  ]
}
